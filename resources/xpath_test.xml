<?xml version="1.0" encoding="UTF-8"?>
<!-- test that Basic HTTP Event I/O processor uses POST method -->
<scxml xmlns="http://www.w3.org/2005/07/scxml"
xmlns:conf="http://www.w3.org/2005/scxml-conformance"
initial="s0" datamodel="xpath" version="1.0">

    <state id="s0">
        <onentry>
            <send event="timeout" delay="30s"/>
            <send event="test"
                targetexpr="$_ioprocessors/raw/location/text()"
                type="http://www.w3.org/TR/scxml/#BasicHTTPEventProcessor"/>
        </onentry>
        <!-- if other end sends us back this event, we succeed -->
        <transition event="test" cond="contains($_event/raw, 'POST')" target="pass"/>
        <transition event="*" target="fail"/>
    </state>
    <final id="pass">
        <onentry>
            <log label="Outcome" expr="'pass'"/>
        </onentry>
    </final>
    <final id="fail">
        <onentry>
            <log label="Outcome" expr="'fail'"/>
        </onentry>
    </final>

</scxml>