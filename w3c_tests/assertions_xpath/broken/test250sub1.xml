<?xml version="1.0" encoding="UTF-8"?><!-- wait to be cancelled, log output will show that the exit handlers are executed.  entering
final state indicates failure (= lack of cancellation)   --><scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:conf="http://www.w3.org/2005/scxml-conformance" initial="s0" datamodel="xpath">
   
<state id="s0" initial="s01">
 <onentry>
   <send event="timeout" delay="2s"/>
   </onentry>
   <transition event="timeout" target="final"/>
  <onexit>
   <log conf:quoteExpr="Exiting s0"/>
   </onexit>
   
   <state id="s01">
  <onexit>
   <log conf:quoteExpr="Exiting s01"/>
   </onexit>
   </state>
 </state>
     
<final id="final">
  <onentry>
    <log conf:quoteExpr="entering final state, invocation was not cancelled"/>
    </onentry>
    </final> 
</scxml>